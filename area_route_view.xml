<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>

<record id="area_tree_view" model="ir.ui.view">
			<field name="name">Area</field>
			<field name="model">area</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
			<tree string="area">
	   			<field name="name" />
	   			<field name="city"/>
	   			<field name="state_id"/>
	   			<field name="zone_id"/>
	   			<field name="country_id"/>
			</tree>
			</field>
		</record>
   		
   		<record id="area_form_view" model="ir.ui.view"> 
   		<field name="name">Area</field>
   		<field name="model">area</field>
   		<field name="type">form</field>
   		<field name="arch" type="xml">
   		  <form string="area">
	   			<group col="4" colspan="8">
		   			<field name="name" />
		   			<field name="desc" />
		   			<field name="city"/>
		   			<field name="state_id"/>
		   			<field name="zone_id"/>
		   			<field name="country_id"/>
	   			</group>   
   		  </form>
   		</field>
   		</record>
   
   		<record id="area_action" model="ir.actions.act_window">
	   		<field name="name">Area</field>
	   		<field name="res_model">area</field>
	   		<field name="view_mode">tree,form</field>
	   		<field name="type">ir.actions.act_window</field>
	   		<field name="view_id" ref="area_tree_view"/>
   		</record>
   		
	
	
	<record id="route_tree_view" model="ir.ui.view">
			<field name="name">Route</field>
			<field name="model">route</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
			<tree string="route">
	   			<field name="name" />
	   			<field name="area_id"/>
	   			<field name="city"/>
	   			<field name="state_id"/>
	   			<field name="zone_id"/>
	   			<field name="country_id"/>
			</tree>
			</field>
		</record>
   		
   		<record id="route_form_view" model="ir.ui.view"> 
   		<field name="name">Route</field>
   		<field name="model">route</field>
   		<field name="type">form</field>
   		<field name="arch" type="xml">
   		  <form string="route">
	   			<group col="4" colspan="8">
		   			<field name="name" />
		   			<field name="desc" />
		   			<field name="area_id"/>
		   			<field name="city"/>
		   			<field name="state_id"/>
		   			<field name="zone_id"/>
		   			<field name="description"/>
		   			<field name="country_id"/>
	   			</group>
   		  </form>
   		</field>
   		</record>
   
   		<record id="route_action" model="ir.actions.act_window">
	   		<field name="name">Route</field>
	   		<field name="res_model">route</field>
	   		<field name="view_mode">tree,form</field>
	   		<field name="type">ir.actions.act_window</field>
	   		<field name="view_id" ref="route_tree_view"/>
   		</record>
   		
	
	
</data>
</openerp>